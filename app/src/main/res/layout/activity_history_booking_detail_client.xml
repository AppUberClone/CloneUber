<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Client.HistoryBookingDetailClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark">
            </View>

            <TextView
                android:id="@+id/textViewNameHistoryBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del conductor"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="30dp"/>

            <!-- YOUR CONTENT -->

        </io.github.florent37.shapeofview.shapes.ArcView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_on"
            android:layout_marginTop="90dp"></ImageView>
        <TextView
            android:id="@+id/textViewOriginHistoyBookingDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle falsa con avenida falsa"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_map"
            android:layout_marginTop="20dp"></ImageView>
        <TextView
            android:id="@+id/textViewDestinationBookingDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle falsa con avenida falsa"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"></ImageView>
        <TextView
            android:id="@+id/textViewCalicationBookingDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calificacion : 0"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageHistoryBookingDetail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_user"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="#f0f0f0"
        android:layout_marginTop="120dp"/>
    <RatingBar
        android:id="@+id/ratingBarHistoryBookingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:isIndicator="true"
        android:numStars="5"
        android:layout_margin="5dp">
    </RatingBar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageBackHistoryBooking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:layout_gravity="left|top"
        app:civ_border_width="5dp"
        app:civ_border_color="#f0f0f0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>